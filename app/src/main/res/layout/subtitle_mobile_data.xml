<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25.0dip"
    android:background="@color/yellow_warning"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip">

    <ImageView
        android:id="@+id/iv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/mobile_data_warning"
        android:textColor="@color/yellow_warning_text"
        android:textSize="@dimen/textSize_h6" />

    <ImageView
        android:id="@+id/iv_warning_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/warning_arrow" />
</LinearLayout>
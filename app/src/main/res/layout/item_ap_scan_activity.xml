<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/doconnect"
        android:textColor="@color/accent"
        android:textSize="@dimen/textSize_h6"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/fl_phone"
        android:layout_width="@dimen/iv_item_loading_width"
        android:layout_height="@dimen/iv_item_loading_height"
        android:layout_below="@id/tv_connect"
        android:layout_marginTop="0.0dip">

        <ImageView
            android:id="@+id/iv_route"
            android:layout_width="@dimen/iv_item_loading_width"
            android:layout_height="@dimen/iv_item_loading_height"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_loading_anim_img"
            android:visibility="invisible" />

        <ImageView
            android:id="@id/iv_head"
            android:layout_width="@dimen/iv_item_head_width"
            android:layout_height="@dimen/iv_item_head_height"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/iv_item_loading_marginTop"
            android:background="@drawable/unconnect_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_phone"
        android:layout_centerHorizontal="true"
        android:text="vivo Xshot"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_h6" />
</RelativeLayout>
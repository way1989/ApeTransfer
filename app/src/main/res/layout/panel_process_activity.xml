<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/process_panel_height"
                android:background="@color/white_dark"
                android:gravity="center"
                android:orientation="vertical">

    <Button
        android:id="@+id/btnSure"
        android:layout_width="@dimen/panel_btn_width"
        android:layout_height="@dimen/panel_btn_height"
        android:background="@drawable/bt_exchange_selector"
        android:text="@android:string/ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_h4"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/panel_btn_width"
        android:layout_height="@dimen/panel_btn_height"
        android:background="@drawable/bt_exchange_selector"
        android:text="@string/bt_stop_sending"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_h4"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center">

        <FrameLayout
            android:layout_width="@dimen/scan_anim_width"
            android:layout_height="@dimen/scan_anim_height"
            android:layout_centerInParent="true"
            android:background="@drawable/scan_mine_phone_bg"
            android:gravity="center"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/scan_anim_width"
            android:layout_height="@dimen/scan_anim_height"
            android:layout_centerInParent="true"
            android:src="@drawable/scan_ap"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/iv_item_me_width"
            android:layout_height="@dimen/iv_item_me_height"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/head_default1" />

        <TextView
            android:id="@+id/mine_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/scan_name_marginTop"
            android:text="@string/main_me"
            android:textColor="@color/primary"
            android:textSize="@dimen/textSize_h6" />

        <com.ape.transfer.widget.RandomTextView
            android:id="@+id/rl_phones"
            android:layout_width="@dimen/scan_random_width"
            android:layout_height="@dimen/scan_random_height"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/scan_tip_marginBottom"
        android:gravity="center"
        android:text="@string/text_connetion_tip"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/textSize_h5" />
</LinearLayout>

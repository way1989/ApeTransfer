<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_item_im_marginTop"
                android:foreground="?selectableItemBackground"
                android:gravity="center">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/app_item_im_width"
        android:layout_height="@dimen/app_item_im_width"
        android:layout_centerHorizontal="true"
        android:src="@drawable/file_icon_apk"/>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/selected_icon_width_height"
        android:layout_height="@dimen/selected_icon_width_height"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_alignRight="@id/iv_icon"
        android:src="@drawable/selected"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/app_item_text_marginTop"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="@dimen/app_item_tv_width"
        android:maxLines="1"
        android:text="QQ"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_h5"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="70M"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/textSize_h6"/>
</RelativeLayout>